<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:id="@+id/sign_up_data"
               android:layout_marginTop="30dp"
               android:layout_marginBottom="20dp"
               android:background="#ffffff"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp">

               <LinearLayout
                   android:layout_width="300dp"
                   android:layout_height="match_parent"
                   android:id="@+id/sign_up_title"
                   android:layout_marginTop="15dp">

                   <ImageButton
                       android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/btn_back"
                       android:background="#ffffff"
                       android:layout_marginStart="10dp" />

                   <TextView
                       android:text="@string/title_register"
                       android:layout_width="100dp"
                       android:layout_height="wrap_content"
                       android:id="@+id/title_register"
                       android:layout_weight="0.45"
                       android:textAlignment="center"
                       android:textSize="24dp"
                       android:textColor="#000000"
                       android:layout_marginTop="2dp" />
               </LinearLayout>

               <ImageView
                   android:src="@drawable/barra_gris"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/imageView3"
                   android:layout_marginTop="15dp"
                   android:layout_marginBottom="30dp" />

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/email_area">

                   <EditText
                       android:layout_width="match_parent"
                       android:layout_height="35dp"
                       android:inputType="textEmailAddress"
                       android:ems="10"
                       android:id="@+id/editText"
                       android:layout_marginStart="38dp"
                       android:text="@string/edittext_email"
                       android:paddingTop="5dp"
                       android:layout_marginEnd="38dp" />

                   <ImageView
                       android:src="@drawable/barra_gris"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:id="@+id/imageView4"
                       android:layout_marginStart="38dp"
                       android:layout_marginBottom="20dp"
                       android:layout_marginEnd="38dp" />
               </LinearLayout>

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/password_area">

                   <EditText
                       android:layout_width="match_parent"
                       android:layout_height="35dp"
                       android:inputType="textPassword"
                       android:ems="10"
                       android:id="@+id/txt_password"
                       android:layout_marginStart="38dp"
                       android:text="@string/edittext_password"
                       android:layout_marginEnd="38dp" />

                   <ImageView
                       android:src="@drawable/barra_gris"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"

                       android:layout_marginStart="38dp"
                       android:layout_marginBottom="20dp"
                       android:layout_marginEnd="38dp" />/>
               </LinearLayout>

               <Button
                   android:text="@string/title_register"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/button2"
                   android:background="@drawable/btn_border"
                   android:layout_marginStart="38dp"
                   android:layout_marginEnd="38dp"
                   android:textColor="#FE2E2E"
                   android:layout_marginBottom="20dp" />

               <ImageView
                   android:src="@drawable/barra_gris_or"
                   android:layout_width="match_parent"
                   android:layout_height="20dp"
                   android:id="@+id/imageView6" />

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/btn_social_area"
                   android:layout_marginBottom="30dp">

                   <ImageButton
                       android:src="@drawable/boton_fb"
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       android:id="@+id/btn_register_facebook"
                       android:layout_marginStart="34dp"
                       android:layout_marginEnd="34dp"
                       android:backgroundTint="#00ffffff"
                       android:layout_marginBottom="10dp" />

                   <ImageButton
                       android:src="@drawable/boton_google"
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       android:id="@+id/imageButton4"
                       android:layout_marginEnd="34dp"
                       android:layout_marginStart="34dp"
                       android:backgroundTint="#00ffffff" />
               </LinearLayout>


           </LinearLayout>

           <LinearLayout
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginTop="40dp">

               <TextView
                   android:text="@string/title_forgot_password"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/textView4"
                   android:textColor="#ffffff"
                   android:textAlignment="center" />

               <ImageView
                   android:src="@drawable/barra_blanca"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/imageView7"
                   android:layout_marginStart="113dp"
                   android:layout_marginEnd="113dp" />
           </LinearLayout>
       </LinearLayout>
    </ScrollView>
</LinearLayout>