<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="2dp"
    app:cardBackgroundColor="@android:color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:weightSum="1">

            <ImageView
                android:src="@drawable/icon_alumno2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView_comentario_titulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:typeface="sans"
                        android:textSize="14sp"
                        android:text="anonymous"

                        android:textStyle="normal|bold"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:text="5.0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_comentario_rating"
                        />

                    <ImageView
                        android:src="@drawable/icon_star"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/imageView2"
                        />
                </LinearLayout>

                <TextView
                    android:text="Notes Materias - Incluye la Carrera a la cual le pertenece - al momento de jalarlo de la base de datos  ajksjdal daskljdalksd nasdklansd asdjasd asdjals dalsjdka sdlkajsda sdajsd asldjas dalsjda dslkajsdas sdjasdn;"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_commentario_cuerpo"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>